Alias /jsgameviewer <%= @params[:docroot] %>
<Directory "<%= @params[:docroot] %>">
  DirectoryIndex index.html,index.php
  AllowOverride None
  Options ExecCGI
  Order allow,deny
  Allow from all
  
  #LogLevel info
  #ErrorLog <%= @node[:apache][:log_dir] %>/jsgameviewer-error.log
  #CustomLog <%= @node[:apache][:log_dir] %>/jsgameviewer-access.log combined

  <IfModule mod_security.c>
    SecFilterEngine Off
  </IfModule>

  <IfModule mod_deflate.c>
    AddOutputFilterByType DEFLATE text/html text/plain text/xml text/css text/javascript application/javascript
  </IfModule>

  <IfModule mod_expires.c>
    ExpiresActive On
    ExpiresByType image/gif  A86400000
    ExpiresByType image/jpeg  A86400000
    ExpiresByType image/png  A86400000
  </IfModule>

  AddType 'text/plain; charset=gb2312' sgf
  AddType 'text/javascript; charset=utf8' js
</Directory>
